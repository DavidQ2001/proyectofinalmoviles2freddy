<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="CONCIERTO BAD BUNNY LUGAR LA MACARENA"
        android:textSize="25dp" />

    <TextView

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="INGRSE SUS DATOS"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etnombre"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="NOMBRE"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etcedula"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="CEDULA"
            android:inputType="number" />


    </LinearLayout>


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="LOCALIDAD"
        android:textSize="25dp" />


    <CheckBox
        android:id="@+id/cbvip"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="VIP $2.000000"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/cbpreferencial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="PREFERENCIAL $500.000"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cbgeneral"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/fuente1"
        android:gravity="center"
        android:text="GENERAL $150.000"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/cbactivo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:enabled="false"
        android:fontFamily="@font/fuente1"
        android:text="ACTIVO"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btadicionar"
            android:layout_width="180dp"
            android:backgroundTint="@color/teal_700"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fuente1"
            android:onClick="Adicionar"
            android:text="ADICIONAR" />

        <Button
            android:id="@+id/btanular"
            android:layout_width="180dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fuente1"
            android:onClick="Anular"
            android:text="ANULAR" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btconsultar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/fuente1"
            android:onClick="Consultar"
            android:text="CONSULTAR" />

        <Button
            android:id="@+id/btcancelar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fuente1"
            android:onClick="Cancelar"
            android:text="CANCELAR" />

    </LinearLayout>


</LinearLayout>